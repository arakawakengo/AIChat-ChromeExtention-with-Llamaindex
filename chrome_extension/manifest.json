{
  "manifest_version": 3,
  "name": "My Nikkei Chat Extension",
  "version": "1.0",
  "description": "Chat extension for Nikkei",
  "permissions": ["activeTab"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "content_scripts": [
    {
      "matches": ["*://www.nikkei.com/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}
