{
    "manifest_version": 2,
    "name": "Nikkei Llama2 Extension",
    "version": "1.0",
    "description": "Chat extension for Chrome",
    "permissions": ["activeTab", "http://*/*", "https://*/*"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }
  